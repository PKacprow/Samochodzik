<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_devices"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
tools:context="add proper namespace"
    android:background="@drawable/auto">


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wyszukaj sparowane urządzenia"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        style="@android:style/Animation.Translucent"
        android:background="@android:drawable/editbox_dropdown_dark_frame"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/listView"
        android:background="@android:color/holo_blue_bright"
        android:autofillHints="?android:attr/colorControlHighlight"
        android:backgroundTintMode="multiply"
        android:elevation="10dp"
        android:clipChildren="false"
        android:contextClickable="false"
        android:layout_centerVertical="true">

    </ListView>

    <TextView
        android:text="Wybierz swój samochodzik:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:textIsSelectable="false"
        android:textSize="36sp"
        android:textStyle="normal|bold|italic"
        android:textColor="?android:attr/colorMultiSelectHighlight"
        android:textAlignment="center"
        android:fontFamily="serif-monospace"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
